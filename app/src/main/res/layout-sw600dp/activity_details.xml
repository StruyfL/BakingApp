<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_recipe_two_pane"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".DetailsActivity" >

    <FrameLayout
        android:id="@+id/main_recipe_fragment"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:name="com.lssoftworks.u0068830.bakingapp.DetailsStepsFragment" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />


    <FrameLayout
        android:id="@+id/step_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.lssoftworks.u0068830.bakingapp.DetailsStepFragment" />

</LinearLayout>